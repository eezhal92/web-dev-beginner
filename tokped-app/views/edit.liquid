{% layout "_layout.liquid", addresses: addresses %}
{% block %}
<div class="container">
  <h2>Edit Toko</h2>
  <form class="form" method="POST" action="/update-shop/{{ shop.id }}" enctype="application/x-www-form-urlencoded">
    <div class="form-group">
      <label for="">Name</label>
      <input name="name" value="{{ shop.name }}">
    </div>

    <div class="form-group">
      <label for="">Address</label>
      <select name="address">
        {% for city in addresses %}
        <option value="{{ city }}" {% if city == shop.address %}selected{% endif %}>{{ city }}</option>
        {% endfor %}
      </select>
    </div>

    <div class="form-group">
      <label for="">No HP</label>
      <input name="phone" value="{{ shop.phone }}">
    </div>

    <button class="btn btn--primary">Update</button>
  </form>
</div>

<script src="/static/js/modal.js"></script>
<script>
  const addbtn = document.querySelector('.add-toko');

  addbtn.addEventListener('click', () => {
    window.addModal.show();
  });
</script>

{% endblock %}
